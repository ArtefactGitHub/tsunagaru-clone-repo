.dashboard
  .row.headline
    = fa_icon 'home', class: 'icon'
    | ホーム画面

  .row
    .col-12
      .chat-buttons
        .row
          .col-lg-6
            .text-center
              p.mt-5
                = link_to room_path(current_user.my_room), class: 'btn btn-primary btn-raised mybtn-start-chat' do
                  | 自分のチャット</br>部屋に入る
                  end
          .col-lg-6
            .text-center
              p.mt-5
                = render 'modal', friends: @friends

      = render 'profile'

      .friend-list
        .row.headline
          = fa_icon 'users', class: 'icon'
          | トモダチ
          = render 'shared/mypage/friend_count', friends: @friends

        - if current_user.has_request?
          = render 'shared/mypage/notify_new_request'

        .row
          .col-12
            = render 'friends', friend_file_name: 'friend', friends: @friends
